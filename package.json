{
  "name": "arashi",
  "version": "0.0.1",
  "description": "personal website",
  "scripts": {
    "clean": "rimraf .parcel-cache && yarn workspace frontend clean",
    "start:dev": "concurrently -c bgBlue -n frontend \"yarn workspace frontend start:dev\"",
    "prebuild": "yarn clean",
    "build": "concurrently -c bgBlue -n frontend \"yarn workspace frontend build --no-source-maps\"",
    "lint": "yarn eslint .",
    "prettier:check": "yarn prettier --check .",
    "prettier:write": "yarn prettier --write ."
  },
  "author": "storm",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "yarn prettier:write && yarn lint && git add ."
    }
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "cpy-cli": "^3.1.1",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "parcel": "^2.0.0-beta.1",
    "prettier": "^2.2.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.1.2",
    "yarn": "^1.22.10"
  },
  "dependencies": {
    "concurrently": "^5.3.0"
  }
}
